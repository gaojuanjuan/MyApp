<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/myreply_item"
              style="@style/pressed_style"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/serial_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/item_icon"
            android:gravity="center"
            android:text="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/serial_number_tv">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv"
                    style="@style/ItemTitleTv_style"
                    android:text="小组名称 :"
                    android:layout_width="75dp"
                    />
                <TextView
                    android:id="@+id/teamName_tv"
                    style="@style/ItemTitleValueTv_style"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/title_tv"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/subtitle_tv"
                    style="@style/ItemTitleTv_style"
                    android:text="答辩组长 :"
                    android:layout_width="75dp"
                    />
                <TextView
                    android:id="@+id/replyLeader_tv"
                    style="@style/ItemTitleValueTv_style"
                    android:layout_toRightOf="@id/subtitle_tv"
                    />
            </RelativeLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include layout="@layout/line"/>
</LinearLayout>