<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeaea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        >

    <RelativeLayout
        style="@style/ProjectDetailRL_style">

        <TextView
            android:id="@+id/name_tv"
            style="@style/ProjectDetailTv_style"
            android:text="姓名"
            />

        <TextView
            android:id="@+id/nameTv"
            style="@style/ProjectDetailValueTv_style"
            android:layout_toRightOf="@id/name_tv"
            />
    </RelativeLayout>


    <RelativeLayout
        style="@style/ProjectDetailRL_style">

        <TextView
            android:id="@+id/sex_tv"
            style="@style/ProjectDetailTv_style"
            android:text="性别"
            />

        <TextView
            android:id="@+id/sexTv"
            style="@style/ProjectDetailValueTv_style"
            android:layout_toRightOf="@id/sex_tv"
            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/ProjectDetailRL_style">

        <TextView
            android:id="@+id/worker_num_tv"
            style="@style/ProjectDetailTv_style"
            android:text="职工号"
            />

        <TextView
            android:id="@+id/worker_numTv"
            style="@style/ProjectDetailValueTv_style"
            android:layout_toRightOf="@id/worker_num_tv"
            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/ProjectDetailRL_style">

        <TextView
            android:id="@+id/department_tv"
            style="@style/ProjectDetailTv_style"
            android:layout_alignParentTop="true"
            android:text="部门"/>

        <TextView
            android:id="@+id/departmentTv"
            style="@style/ProjectDetailValueTv_style"
            android:layout_toRightOf="@id/department_tv"
            />
    </RelativeLayout>
        <LinearLayout
            style="@style/ProjectDetailRL_style"
            android:orientation="vertical"
            android:background="@drawable/border_nobottom">

            <TextView
                android:id="@+id/student_tv"
                style="@style/ProjectDetailTv_style"
                android:layout_width="match_parent"
                android:text="我的学生"
                android:textColor="#f00"
                android:background="@drawable/border_nobottom"
                />
            <include layout="@layout/line"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/replyStudentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>