<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/pressed_style"
              android:id="@+id/replystudent_item"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/serial_number_tv"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@mipmap/item_icon"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/serial_number_tv">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv"
                    style="@style/ItemTitleTv_style"
                    android:text="答辩学生 :"
                    android:layout_width="75dp"
                    />
                <TextView
                    android:id="@+id/replyStudent_tv"
                    style="@style/ItemTitleValueTv_style"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/title_tv"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/subtitle_tv"
                    style="@style/ItemTitleTv_style"
                    android:text="答辩课题 :"
                    android:layout_width="75dp"
                    />
                <TextView
                    android:id="@+id/replyProject_tv"
                    style="@style/ItemTitleValueTv_style"
                    android:layout_toRightOf="@id/subtitle_tv"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/replyState_tv"
                    style="@style/ItemTitleTv_style"
                    android:text="状态"
                    android:textColor="@android:color/holo_red_dark"
                    />
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include layout="@layout/line"/>
</LinearLayout>